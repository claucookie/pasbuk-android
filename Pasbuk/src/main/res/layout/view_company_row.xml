<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_row_height"
    android:paddingRight="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/menu_item_bg_selector">

    <ImageView
        android:id="@+id/company_menu_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/company_menu_icon"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:paddingBottom="2dp"/>

    <TextView
        android:id="@+id/company_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="renfe"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/font_size_small"
        android:padding="10dp"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/company_menu_icon"
        android:layout_toLeftOf="@+id/company_counter_text"
        android:layout_centerVertical="true"
        android:textAllCaps="false"/>


    <TextView
        android:id="@+id/company_counter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        tools:text="1"
        android:textColor="@color/common_background"
        android:fontFamily="Roboto-Bold"
        android:textSize="@dimen/font_size_tiny"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_square_shape"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>