<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/common_background</item>
        <item name="android:colorBackground">@color/common_background</item>

        <!-- to use toolbar as actionbar we have to set this -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> <!-- fix for appcompat 22.1 bug -->
        
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TranslucentToolbarStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="SettingsTitleStyle" parent="android:Widget.TextView" >
        <item name="android:textColor">@color/android_green_color</item>
        <item name="android:textSize">@dimen/font_size_tiny</item>
        <item name="android:fontFamily">Roboto-Medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="SettingsContentStyle" parent="android:Widget.TextView" >
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_normal_small</item>
        <item name="android:fontFamily">Roboto-Light</item>
    </style>


</resources>